<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MeasurementsPreviousController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0">
               <children>
                  <Button fx:id="backButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBackButtonPressed" text="Back" textAlignment="CENTER" />
                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                     <children>
                        <Label fx:id="patientNameLabel" text="Patient name" />
                        <HBox spacing="20.0">
                           <children>
                              <Label fx:id="patientAgeLabel" text="Age" />
                              <Label fx:id="patientGenderLabel" text="Gender" />
                              <Label fx:id="patientPNLabel" text="PN" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="Double-click to see test details" />
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="previousTestsTable" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="testDateColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" text="Test date" />
          <TableColumn fx:id="testLabColumn" maxWidth="1.7976931348623157E308" minWidth="300.0" prefWidth="-1.0" text="Taken at (laboratory)" />
        </columns>
      </TableView>
   </center>
</BorderPane>
